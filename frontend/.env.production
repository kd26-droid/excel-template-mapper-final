# Production Environment Variables for Excel Template Mapper Frontend
# Azure Static Web Apps automatically uses this file for production builds

# Backend API URL (will be set to actual Azure App Service URL)
REACT_APP_API_BASE_URL=https://kartik-excel-mapper-backend.azurewebsites.net

# Environment identifier
REACT_APP_ENVIRONMENT=production

# Feature flags
REACT_APP_ENABLE_DEBUG_MODE=false
REACT_APP_ENABLE_ANALYTICS=true

# File upload limits (should match backend)
REACT_APP_MAX_FILE_SIZE_MB=25
REACT_APP_SUPPORTED_FORMATS=.xlsx,.xls,.csv

# UI Configuration
REACT_APP_BRAND_NAME="Excel Template Mapper"
REACT_APP_COMPANY_NAME="Factwise"
REACT_APP_VERSION="1.0.0"

# Performance settings
GENERATE_SOURCEMAP=false
INLINE_RUNTIME_CHUNK=false

# Build optimization
BUILD_PATH=build
PUBLIC_URL=/