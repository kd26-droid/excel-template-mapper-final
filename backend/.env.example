# Environment Configuration for Excel Template Mapper

# DigiKey API Configuration
DIGIKEY_CLIENT_ID=your-digikey-client-id-here
DIGIKEY_CLIENT_SECRET=your-digikey-client-secret-here
DIGIKEY_REDIRECT_URI=https://oauth.pstmn.io/v1/callback
DIGIKEY_SCOPE=productinformation
DIGIKEY_SITE=IN
DIGIKEY_LANG=en
DIGIKEY_CUR=INR

# Azure Document Intelligence (Form Recognizer) Configuration
AZURE_DOCUMENT_INTELLIGENCE_ENDPOINT=https://your-resource-name.cognitiveservices.azure.com/
AZURE_DOCUMENT_INTELLIGENCE_KEY=your-azure-form-recognizer-key-here

# Security
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=False

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,your-domain.com

# Database Configuration
# For PostgreSQL (recommended for production):
# DATABASE_URL=postgresql://user:password@localhost:5432/excel_mapper_db

# Redis Cache (optional)
# REDIS_URL=redis://localhost:6379/1

# CORS Configuration
CORS_ALLOWED_ORIGINS=http://localhost:3000,https://your-frontend-domain.com

# File Upload Settings
MAX_FILE_SIZE_MB=25
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS_PER_USER=10
CLEANUP_TEMP_FILES_HOURS=24

# Pagination Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Email Configuration (if needed)
# EMAIL_HOST=smtp.your-provider.com
# EMAIL_PORT=587
# EMAIL_HOST_USER=your-email@domain.com
# EMAIL_HOST_PASSWORD=your-email-password
# EMAIL_USE_TLS=True

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO