# Production Environment Variables for Excel Template Mapper Backend
# These will be set in Azure App Service configuration

# Django Core Settings
SECRET_KEY=your-secret-key-will-be-generated-automatically
DEBUG=False
ALLOWED_HOSTS=kartik-excel-mapper-backend.azurewebsites.net

# Database Configuration (Azure PostgreSQL)
DATABASE_URL=postgresql://dbadmin:ExcelMapper2025!@kartik-excel-mapper-db-server.postgres.database.azure.com:5432/excel_mapper_db?sslmode=require

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://kartik-excel-mapper-frontend.azurestaticapps.net

# Azure Blob Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=kartikexcelmapperstorage
AZURE_STORAGE_ACCOUNT_KEY=will-be-set-automatically
AZURE_STORAGE_CONTAINER_NAME=uploaded-files

# File Upload Settings
MAX_FILE_SIZE_MB=25
SESSION_TIMEOUT_MINUTES=60
MAX_SESSIONS_PER_USER=10
CLEANUP_TEMP_FILES_HOURS=24

# Performance Settings
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# Logging Configuration
LOG_LEVEL=INFO

# Security Settings
SECURE_SSL_REDIRECT=True
SECURE_HSTS_SECONDS=31536000
SECURE_HSTS_INCLUDE_SUBDOMAINS=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY

# Azure App Service Settings
PYTHONPATH=/home/site/wwwroot
WEBSITES_ENABLE_APP_SERVICE_STORAGE=false